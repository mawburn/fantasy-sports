# NFL DFS System Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=sqlite:///data/database/nfl_dfs.db
DATABASE_POOL_SIZE=5
DATABASE_ECHO=false

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Model Configuration
MODEL_PATH=models/production
ENABLE_CPU_OPTIMIZATION=true
NUM_CPU_THREADS=8
BATCH_SIZE=32

# Cache Configuration
CACHE_BACKEND=memory
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# NFL Data Configuration
NFL_SEASONS_TO_LOAD=3
NFL_DATA_CACHE_DIR=data/cache
DATA_REFRESH_INTERVAL=3600

# DraftKings Configuration
DK_CLASSIC_SALARY_CAP=50000
DK_SHOWDOWN_SALARY_CAP=50000

# ML Configuration
MLFLOW_TRACKING_URI=file:///data/mlflow
DEFAULT_MODEL_PATH=models/production

# Feature Flags
ENABLE_SELF_TUNING=true
ENABLE_MONITORING=true
ENABLE_CACHING=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=data/logs/nfl_dfs.log

# External APIs (add your keys here)
# WEATHER_API_KEY=your_key_here
# ODDS_API_KEY=your_key_here
